<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7fd1d9"
    tools:context="edutrailproject.com.edunewproject1.MainActivity"

    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    >


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please give us a feedback"
        android:textColor="#16041b"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginTop="87dp"
        app:layout_constraintTop_toBottomOf="@+id/presenceBtn" />

    <Button
        android:id="@+id/sadbtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/sad"
        android:onClick="onClick"
        app:layout_constraintLeft_toRightOf="@+id/happybtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/happybtn"
        android:layout_marginBottom="0dp" />

    <Button
        android:id="@+id/normalbtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/neutral"
        android:onClick="onClick"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/happybtn"
        app:layout_constraintBottom_toBottomOf="@+id/happybtn"
        android:layout_marginBottom="0dp" />

    <Button
        android:id="@+id/happybtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/happy"
        android:onClick="onClick"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@+id/normalbtn"
        app:layout_constraintRight_toLeftOf="@+id/sadbtn"
        tools:ignore="RtlHardcoded"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.531" />

    <TextView
        android:id="@+id/textView1"
        android:textColor="#16041b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_on_button_to_submitt_your_presence"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/presenceBtn"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/presencebtn"
        android:elevation="0dp"
        android:text="@string/presenceBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="385dp"
        android:layout_height="241dp"
        android:layout_marginTop="-1dp"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/t"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_editor_absoluteX="-1dp" />


</android.support.constraint.ConstraintLayout>
